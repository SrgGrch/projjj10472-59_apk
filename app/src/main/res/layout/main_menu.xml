<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loginScreen"
    android:layout_width="370dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <EditText
        android:id="@+id/nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:gravity="center"
        android:hint="Введите ник"
        android:textColor="@color/white" />

    <com.example.myapplication.CustomViews.CustomButton
        style="@style/Theme.CustomButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/button_playAsGuest"
        android:onClick="loginAsGuest"
        android:text="Войти как гость" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.myapplication.CustomViews.CustomButton
            style="@style/Theme.CustomButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/button_openRegister"
            android:onClick="open_reg"
            android:backgroundTint="@color/material.green"
            android:text="Регистрация" />

        <com.example.myapplication.CustomViews.CustomButton
            style="@style/Theme.CustomButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/button_openLogin"
            android:onClick="open_login"
            android:backgroundTint="@color/material.green"
            android:text="Войти"/>
    </LinearLayout>
</LinearLayout>